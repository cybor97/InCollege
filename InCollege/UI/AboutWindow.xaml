<Window x:Class="InCollege.Client.UI.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource BaseWindow}"
        Title="О программе" Height="400" Width="400">
    <StackPanel Orientation="Vertical">
        <TextBlock Name="TitleTB"
                   Margin="0 10 0 10" HorizontalAlignment="Center" TextAlignment="Center"
                   FontSize="24" FontWeight="Bold" Foreground="Lime"
                   Text="InCollege" MouseLeftButtonDown="TitleTB_Click"/>

        <TextBlock FontSize="14" Foreground="Gray" TextWrapping="Wrap" Name="AboutContentTB"/>
    </StackPanel>
</Window>
