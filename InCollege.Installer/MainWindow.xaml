<Window x:Class="InCollege.Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="500"
        WindowStyle="None" ResizeMode="NoResize" 
        AllowsTransparency="True" Background="Transparent">
    <Grid>
        <Border CornerRadius="10" Background="White"
                    BorderBrush="#EEE"
                    BorderThickness="2">

            <Grid>
                <TextBlock Text="InCollege" FontSize="50" FontWeight="Bold" 
                   Foreground="WhiteSmoke" 
                   Name="LogoTB"
                   HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard TargetName="LogoTB" TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)">
                                    <ColorAnimation To="LimeGreen" Duration="0:0:3"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>
